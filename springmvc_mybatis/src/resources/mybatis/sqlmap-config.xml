<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <settings>
        <setting name="lazyLoadingEnabled" value="false" />
    </settings>

    <!-- 为实体起别名，在*Mapper.xml中则直接使用这个别名 -->
    <typeAliases>
        <typeAlias type="com.zb.entity.User" alias="user" />
    </typeAliases>

    <!-- 引入mybatis的配置文件 -->
    <mappers>
        <mapper resource="com/zb/mappers/UserMapper.xml" />
    </mappers>
</configuration>
